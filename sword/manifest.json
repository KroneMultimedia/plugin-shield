{
    "manifest_version": 3,
    "name": "Sword",
    "version": "1.0",
    "description": "Sword for Shield",
    "permissions": [
        "tabs",
        "scripting",
        "storage",
        "unlimitedStorage"
    ],
    "host_permissions": [
      "*://wp.krone.at/*",
      "*://*.krone.at/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}

